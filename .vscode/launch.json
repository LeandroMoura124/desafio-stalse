{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "1. Debug API (FastAPI)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload",
                "--port", 
                "8000"
            ],
            "jinja": true,
            "justMyCode": true,
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            }
        },
        {
            "name": "2. Debug Script ETL",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/data/etl.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/data",
            "justMyCode": true
        },
        {
            "name": "3. Debug Frontend (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/frontend"
        }
    ],
    "compounds": [
        {
            "name": " Fullstack: Front + Back",
            "configurations": ["1. Debug API (FastAPI)", "3. Debug Frontend (Chrome)"]
        }
    ]
}